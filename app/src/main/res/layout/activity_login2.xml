<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_account"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp50"
        android:textSize="@dimen/dp26"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_marginTop="@dimen/dp60"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp50"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextQQ"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border2"
            android:ems="10"
            android:hint="@string/enter_phone_number"
            android:gravity="center"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp50"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border2"
            android:ems="10"
            android:hint="@string/enter_password"
            android:gravity="center"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp16"
            android:text="@string/registered_agreement"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp60"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dp20"
        android:background="@drawable/selector_btn_bg"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp50"
        android:text="@string/login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:textSize="@dimen/dp18"
        android:textColor="@color/color_0095FF"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp50"
        android:text="@string/more"/>
</LinearLayout>