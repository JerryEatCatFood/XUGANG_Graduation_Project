<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="XUGANG_Project.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="fontFamily">@font/fzltzhunhk</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppThem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/trans</item>
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:backgroundDimEnabled">false</item><!--背景是否变暗-->
        <item name="android:backgroundDimAmount">1</item>
    </style>

</resources>